{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceParentDir}/build/doc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "DOXYGEN_PROJECT_NAME": "Dura2D",
        "DOXYGEN_PROJECT_ROOT": "${sourceDir}",
        "DOXYGEN_CUSTOM_DIR": "${sourceDir}/docs/doxygen-custom",
        "DOXYGEN_OUTPUT_DIRECTORY": "${sourceDir}/build/docs/doxygen"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "docs",
      "configurePreset": "default",
      "targets": ["doxygenDocs"]
    }
  ]
}
